<!-- Main Container start -->
<div class="main-container">
  <div class="row">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <div class="login-wrapper">
        <div class="header">
          <div class="row">
            <div class="col-md-12">
              <h3>Forgot your password?<img src="<%= asset_path('logo.png') %>" alt="Logo" class="pull-right"></h3>
              <%= devise_error_messages! %>
            </div>
          </div>
        </div>
        <div class="content">
          <div class="row">
            <div class="col-md-12 col-sm-12">
              <%= f.email_field :email, :autofocus => true, class: "input col-md-12 col-sm-12 email", placeholder: "example@mail.com", required: "required" %>
            </div>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Reset Password", class: "btn btn-danger" %>
          <%= render "devise/shared/links" %>
          <div class="clearfix"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- Main Container end -->