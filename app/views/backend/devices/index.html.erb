<% title "My Devices" %>

<div class="row">
  <div class="col-md-12">

    <div class="widget">
      <div class="widget-body">
        <p class="text-right">
          <a href="<%= new_device_path %>" class="btn btn-success">Add Device</a>
        </p>
        <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="data-table">    
          <thead>
            <tr>
              <th style="width:25%">Device UUID</th>
              <th style="width:10%">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @devices.each do |device| %>
              <tr class="gradeX">
                <td><%= device.channel_name %></td>
                <td>
                  <a href="<%= device_path(device) %>" class="actions-icons">
                    <i class="icon-search"></i>
                  </a>
                  &nbsp;|&nbsp;
                  <a href="<%= edit_device_path(device) %>" class="actions-icons">
                    <i class="icon-edit"></i>
                  </a>
                  &nbsp;|&nbsp;
                  <%= link_to "<i class='icon-trash'></i>".html_safe, device_path(device), method: :delete, class: "delete-row", "data-original-title" => "Delete" %>
                </td>
              </tr>
            <% end %>
            <% if @devices.empty? %>
              <tr>
                <td colspan="4" class="text-center">
                  <i class="icon-lock"></i> You have no devices. Why not <a href="<%= new_device_path %>">Create one now</a>.
                </td>
              </tr>
            <% end %>

          </tbody>
        </table>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>

</div>