<% title "#{@token.name}" %>
<div class="col-md-12">
	<div class="widget">
		<div class="widget-body">
			<p class="text-right">
				<%= link_to "Delete API Token", token_path(@token), method: :delete, class: "btn btn-danger" %>
			</p>

			<table class="table table-striped table-hover">
				<tbody>
					
					<tr>
						<td style="width:10%;">
							<strong>Name</strong>
						</td>
						<td><%= @token.name %></td>
					</tr>
					<tr>
						<td>
							<strong>State</strong>
						</td>
						<td>
							<span class="label label-success">Active</span>
						</td>
					</tr>
					
					<tr>
						<td>
							<strong>Description</strong>
						</td>
						<td><%= @token.description %></td>
					</tr>
					<tr>
						<td>
							<strong>Created On</strong>
						</td>
						<td><%= @token.created_at.strftime("%Y %b %d") %> <em class="muted">(<%= time_ago_in_words @token.created_at %> ago)</em></td>
					</tr>
					<tr>
						<td>
							<strong>API Token</strong>
						</td>
						<td>
							<span class="text-error"><%= @token.token %></span>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>